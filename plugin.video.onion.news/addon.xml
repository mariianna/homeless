<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.onion.news"
       name="Onion News"
       version="0.1.0"
       provider-name="schneidz">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Watch clips from The Onion News Network</summary>
    <description>This add-on scrapes the last 20 videos posted to the onion's rss feed.</description>
	<genre>news,comedy</genre>
  </extension>
</addon>
