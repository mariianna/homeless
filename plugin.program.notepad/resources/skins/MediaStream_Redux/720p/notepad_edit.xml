<window>
    <defaultcontrol>30020</defaultcontrol>	
	<controls>
		<!-- ** Background image ** -->		
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath fallback="special://skin/backgrounds/programs.jpg" background="true">$INFO[Skin.String(Home_Custom_Back_Programs_Folder)]</imagepath>
			<timeperimage>10000</timeperimage>
			<randomize>true</randomize>
			<fadetime>1000</fadetime>
		</control>
		
		<!-- ** Header ** -->
		<control type="group">
			<posx>20</posx>
			<posy>5</posy>
			<animation effect="slide" end="-270,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			<animation effect="slide" start="-270,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>250</width>
				<height>35</height>
				<texture border="0,0,20,0">TitleBG.png</texture>
			</control>
			<control type="label">
				<include>WindowTitleCommons</include>
				<posx>220</posx>
				<label>$LOCALIZE[0]</label>
			</control>
		</control>		
		
		<!--  Clock (top-right) -->
		<include>Clock</include>
		
		<!-- Blade (left) -->
		<control type="image">
			<posx>-820</posx>
			<posy>0</posy>
			<width>846</width>
			<height>720</height>
			<texture>HomeBlade.png</texture>
		</control>
		
		<control type="image">
			<posx>50</posx>
			<posy>60</posy>
			<width>1180</width>
			<height>600</height>
			<texture border="20">ContentPanel.png</texture>
			<include>VisibleFadeEffect</include>
		</control>		
		
		<!--  ** Label (file name) ** -->
		<control type="label" id="30010">
			<posx>60</posx>
			<posy>38</posy>
			<font>font13caps_title</font>
		</control>
		
		<!-- ** List (text lines) ** -->
		<control type="list" id="30020">
			<posx>63</posx>
			<posy>85</posy>
			<width>1135</width>
			<height>550</height>
			<visible>true</visible>
			<orientation>vertical</orientation> 
			<onup>30020</onup>
			<ondown>30020</ondown>
			<onright>30030</onright>
			<pagecontrol>30030</pagecontrol>
			
			<itemlayout height="30"> 
				<control type="label">
		            <posx>35</posx>
		            <posy>5</posy>
		            <width>40</width>
		            <height>30</height>
		            <align>right</align>
		            <font>font12</font>
		            <info>ListItem.Label</info>
		        </control>
				<control type="label">
		            <posx>45</posx>
		            <posy>5</posy>
		            <width>1085</width>
		            <height>30</height>
		            <align>left</align>
		            <font>font12</font>
		            <info>ListItem.Label2</info>
		        </control>
	        </itemlayout>
	        
			<focusedlayout height="30" > 
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>1200</width>
					<height>30</height>
					<texture border="7">MenuItemFO.png</texture>
					<visible>Control.HasFocus(30020)</visible>
				</control>
				<control type="label">
					<posx>35</posx>
					<posy>5</posy>
					<width>40</width>
					<height>30</height>
					<align>right</align>
					<font>font12</font> 
					<info>ListItem.Label</info>
				</control>
				<control type="label">
					<posx>45</posx>
					<posy>5</posy>
					<width>1085</width>
					<height>30</height>
					<align>left</align>
					<font>font12</font>
					<info>ListItem.Label2</info>
				</control>
			</focusedlayout>	        
		</control>
		
		<!-- List Scrollbar -->
		<control type="scrollbar" id="30030">
			<posx>1195</posx>
			<posy>80</posy>
			<width>25</width>
			<height>560</height>
			<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
			<texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
			<texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
			<textureslidernib>ScrollBarNib.png</textureslidernib>
			<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
			<onleft>30020</onleft>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<visible>Control.IsVisible(30020)</visible>
		</control>		
		
		<!-- Blade (right) -->
		<control type="image">
			<posx>26r</posx>
			<posy>0</posy>
			<width>846</width>
			<height>720</height>
			<texture flipx="true">HomeBlade.png</texture>
		</control>		
	</controls>
</window>